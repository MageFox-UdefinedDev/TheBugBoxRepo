<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BugBox.Pages.AddTrap">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Nombre" PlaceholderColor="Purple" Text="{Binding Name}" />
            <Entry Placeholder="Comentario" PlaceholderColor="Purple" Text="{Binding Comment}" />
            <Entry Placeholder="Estatus" PlaceholderColor="Purple" Text="{Binding Status}" />
            <Label Text="Ubicacion" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>